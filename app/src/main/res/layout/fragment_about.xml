<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.hes.group3.santour.Activity.About_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="168dp"
            android:layout_height="175dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Txt_AboutPage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/txt_aboutpage1"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>

        <TextView
            android:id="@+id/txt_AboutPage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/txt_aboutpage2"
            app:layout_constraintEnd_toEndOf="@+id/Txt_AboutPage1"
            app:layout_constraintStart_toStartOf="@+id/Txt_AboutPage1"
            app:layout_constraintTop_toBottomOf="@+id/Txt_AboutPage1" />

        <TextView
            android:id="@+id/txt_AboutPage3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/txt_aboutpage3"
            app:layout_constraintEnd_toEndOf="@+id/txt_AboutPage2"
            app:layout_constraintStart_toStartOf="@+id/txt_AboutPage2"
            app:layout_constraintTop_toBottomOf="@+id/txt_AboutPage2"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
