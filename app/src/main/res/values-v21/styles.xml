<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_main</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:statusBarColor">?android:attr/colorForeground</item>
        <item name="android:navigationBarColor">@color/red_main</item>
        <item name="android:textColorPrimaryInverse">@color/red_main</item>
        <item name="android:textColorPrimary">@color/grey_dark</item>
        <item name="android:itemBackground">@color/red_main</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppDarkTheme4" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_main</item>
